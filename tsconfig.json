{
  "compilerOptions": {
    "target": "es5",                   // Compile to ES5 for better browser support
    "module": "commonjs",               // Module system (Node.js style)
    "strict": true,                     // Enable strict type-checking options
    "esModuleInterop": true,            // Enables interoperability between CommonJS and ES Modules
    "outDir": "./dist",                 // Output directory for compiled files
    "rootDir": "./src",                 // Root directory for TypeScript files
    "moduleResolution": "node",         // How modules are resolved
    "forceConsistentCasingInFileNames": true // Enforce consistent casing in file names
  },
  "include": ["src/**/*.ts"],           // Include TypeScript files from src folder
  "exclude": ["node_modules"]           // Exclude node_modules
}
